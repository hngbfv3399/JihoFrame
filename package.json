    "type": "git",
    "url": "https://github.com/hngbfv3399/jiho-frame.git"
  },
  "bugs": {
    "url": "https://github.com/hngbfv3399/jiho-frame/issues"
  },
  "homepage": "https://github.com/hngbfv3399/jiho-frame#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "vite": "^4.3.9",
    "eslint": "^8.44.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1"
